<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:id="@+id/ll_conatiner"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:background="@drawable/card_like_background"
    android:elevation="@dimen/elevation_6dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|top"
        android:orientation="vertical"
        android:padding="@dimen/padding_5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_receipt_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="01"
                    android:fontFamily="@string/fontFamily__roboto_condensed"
                    android:gravity="center"
                    android:padding="@dimen/padding_10dp"
                    android:text="Service Foods Visitor Badge"
                    android:textAlignment="gravity"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/text_18sp" />


                <TextView
                    android:id="@+id/viewpdf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background_add_more"
                    android:fontFamily="@string/fontFamily__roboto_condensed"
                    android:gravity="center"
                    android:padding="@dimen/padding_10dp"
                    android:text="View PDF"
                    android:textAlignment="gravity"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/text_14sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="01"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/fontFamily__roboto_condensed"
                        android:gravity="left"
                        android:maxLines="1"
                        android:minLines="1"
                        android:padding="@dimen/padding_5dp"
                        android:text="Name"
                        android:textAlignment="gravity"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/fontFamily__roboto_condensed"
                        android:gravity="left"
                        android:maxLines="1"
                        android:minLines="1"
                        android:padding="@dimen/padding_5dp"
                        android:text=""
                        android:textAlignment="gravity"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_18sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="01"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/fontFamily__roboto_condensed"
                        android:gravity="left"
                        android:maxLines="1"
                        android:minLines="1"
                        android:padding="@dimen/padding_5dp"
                        android:text="Company"
                        android:textAlignment="gravity"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/fontFamily__roboto_condensed"
                        android:gravity="left"
                        android:maxLines="1"
                        android:minLines="1"
                        android:padding="@dimen/padding_5dp"
                        android:text=""
                        android:textAlignment="gravity"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_18sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="01"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/fontFamily__roboto_condensed"
                        android:gravity="left"
                        android:maxLines="1"
                        android:minLines="1"
                        android:padding="@dimen/padding_5dp"
                        android:text="Purpose"
                        android:textAlignment="gravity"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/purpose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/fontFamily__roboto_condensed"
                        android:gravity="left"
                        android:maxLines="1"
                        android:minLines="1"
                        android:padding="@dimen/padding_5dp"
                        android:text=""
                        android:textAlignment="gravity"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_18sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="01"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/fontFamily__roboto_condensed"
                        android:gravity="left"
                        android:maxLines="1"
                        android:minLines="1"
                        android:padding="@dimen/padding_5dp"
                        android:text="ID"
                        android:textAlignment="gravity"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/fontFamily__roboto_condensed"
                        android:gravity="left"
                        android:maxLines="1"
                        android:minLines="1"
                        android:padding="@dimen/padding_5dp"
                        android:text=""
                        android:textAlignment="gravity"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_18sp" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="01"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/fontFamily__roboto_condensed"
                        android:gravity="left"
                        android:maxLines="1"
                        android:minLines="1"
                        android:padding="@dimen/padding_5dp"
                        android:text="Date :"
                        android:textAlignment="gravity"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_18sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="01"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/fontFamily__roboto_condensed"
                        android:gravity="left"
                        android:maxLines="1"
                        android:minLines="1"
                        android:padding="@dimen/padding_5dp"
                        android:text="Time :"
                        android:textAlignment="gravity"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_18sp" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/barcodeimage"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_5dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_app_logo" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
