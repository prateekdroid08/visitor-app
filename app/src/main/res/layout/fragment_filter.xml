<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_color"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/images" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:fontFamily="@string/fontFamily__roboto_condensed"
                    android:padding="@dimen/padding_10dp"
                    android:text="Filter"
                    android:textAllCaps="true"
                    android:textSize="@dimen/text_18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:fontFamily="@string/fontFamily__roboto_condensed"
                        android:gravity="left"
                        android:padding="@dimen/padding_10dp"
                        android:text="Date From"
                        android:textAlignment="gravity"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_18sp" />

                    <EditText

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_button_background"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:drawableRight="@drawable/ic_action_arrow_left"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@string/fontFamily__roboto_condensed"
                        android:gravity="left|center_vertical"
                        android:hint="From..."
                        android:inputType="textMultiLine"
                        android:maxLines="1"
                        android:minLines="1"
                        android:padding="@dimen/padding_5dp"
                        android:textAlignment="gravity"
                        android:textColor="@color/black_color"
                        android:textColorHint="@color/hintcolor" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:fontFamily="@string/fontFamily__roboto_condensed"
                        android:gravity="left"
                        android:padding="@dimen/padding_10dp"
                        android:text="Date To"
                        android:textAlignment="gravity"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_18sp" />

                    <EditText

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_button_background"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:drawableRight="@drawable/ic_action_arrow_left"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@string/fontFamily__roboto_condensed"
                        android:gravity="left|center_vertical"
                        android:hint="To..."
                        android:inputType="textMultiLine"
                        android:maxLines="1"
                        android:minLines="1"
                        android:padding="@dimen/padding_5dp"
                        android:textAlignment="gravity"
                        android:textColor="@color/black_color"
                        android:textColorHint="@color/hintcolor" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:fontFamily="@string/fontFamily__roboto_condensed"
                        android:gravity="left"
                        android:padding="@dimen/padding_10dp"
                        android:text="Company"
                        android:textAlignment="gravity"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_18sp" />

                    <EditText

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_button_background"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:drawableRight="@drawable/ic_action_arrow_left"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@string/fontFamily__roboto_condensed"
                        android:gravity="left|center_vertical"
                        android:hint="Select"
                        android:inputType="textMultiLine"
                        android:maxLines="1"
                        android:minLines="1"
                        android:padding="@dimen/padding_5dp"
                        android:textAlignment="gravity"
                        android:textColor="@color/black_color"
                        android:textColorHint="@color/hintcolor" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:fontFamily="@string/fontFamily__roboto_condensed"
                        android:gravity="left"
                        android:padding="@dimen/padding_10dp"
                        android:text="Meeting With"
                        android:textAlignment="gravity"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_18sp" />

                    <EditText

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_button_background"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:drawableRight="@drawable/ic_action_arrow_left"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@string/fontFamily__roboto_condensed"
                        android:gravity="left|center_vertical"
                        android:hint="Select"
                        android:inputType="textMultiLine"
                        android:maxLines="1"
                        android:minLines="1"
                        android:padding="@dimen/padding_5dp"
                        android:textAlignment="gravity"
                        android:textColor="@color/black_color"
                        android:textColorHint="@color/hintcolor" />


                    <TextView
                        android:id="@+id/tv_add_member"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_25dp"
                        android:layout_marginLeft="@dimen/margin_40dp"
                        android:layout_marginRight="@dimen/margin_40dp"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:background="@drawable/button_selector"
                        android:drawableLeft="@drawable/ic_action_arrow_left"
                        android:gravity="center"
                        android:text="Add Members"
                        android:textAlignment="gravity"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/text_18sp" />


                </LinearLayout>

            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>


    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>