<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/admin_list_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@drawable/card_like_background"
    android:elevation="@dimen/elevation_4dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/main_job_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="@dimen/card_elevation_4dp"
        card_view:cardMaxElevation="@dimen/card_elevation_6dp"
        card_view:contentPadding="@dimen/padding_5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:paddingBottom="@dimen/padding_10dp"
                android:paddingLeft="@dimen/padding_2dp"
                android:paddingRight="@dimen/padding_5dp"
                android:text="@string/name"
                android:textAlignment="gravity"
                android:textColor="@color/black_color"
                android:textSize="@dimen/text_18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="@dimen/margin_20dp"
                android:background="@android:color/darker_gray" />


            <TextView
                android:id="@+id/visitor_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:paddingBottom="@dimen/padding_5dp"
                android:paddingLeft="@dimen/padding_2dp"
                android:paddingRight="@dimen/padding_5dp"
                android:paddingTop="@dimen/padding_5dp"
                android:text="@string/visitor_id"
                android:textAlignment="gravity"
                android:textColor="@color/black_color"
                android:textSize="@dimen/text_18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="@dimen/margin_20dp"
                android:background="@android:color/darker_gray" />


        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>